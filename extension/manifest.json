{
  "manifest_version": 3,
  "name": "nvim-web",
  "version": "0.1.0",
  "description": "Neovim in the Browser - Quick access to your nvim-web instance",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "nvim-web"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "ws://127.0.0.1:9001/*"
  ]
}

# EditorConfig - Cross-editor configuration
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.rs]
indent_size = 4

[*.{lua,luau}]
indent_size = 2

[*.{js,ts,json,css}]
indent_size = 2

[*.html]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.toml]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.sh]
indent_size = 2

[Makefile]
indent_style = tab

[Cargo.lock]
indent_size = 4

# Kubernetes manifests
[k8s/*.yaml]
indent_size = 2

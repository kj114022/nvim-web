# EditorConfig - Cross-editor configuration
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
indent_size = 4

[*.{lua,luau}]
indent_size = 2

[*.{js,ts,json,html,css}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.toml]
indent_size = 2

[Makefile]
indent_style = tab
